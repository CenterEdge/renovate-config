{
    "description": "This preset is used to combine update patch and minor package updates into one pull request",
    "packageRules": [
        {
            "enabled": true,   
            "groupName": "npm Minor Packages",
            "matchUpdateTypes": ["patch", "minor"],
            "matchManagers": [ "npm" ],
            "stabilityDays": 3
        }
    ],
    "rangeStrategy": "bump"
}
